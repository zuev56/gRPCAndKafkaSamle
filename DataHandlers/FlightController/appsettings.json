{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "SingleLine",
      "FormatterOptions": {
        "SingleLine": true
      }
    }
  },

  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
      "REST": {
        "Url": "http://localhost:7020",
        "Protocols": "Http1"
      },
      "gRPC": {
        "Url": "http://localhost:7021",
        "Protocols": "Http2"
      }
    }
  },

  "Kafka": {
    "BootstrapServers": "192.168.1.104:9092",
    "Topic": "coordinates",
    "GroupId": "poin-handler-service"
  }
}